@model E_Commerce.Models.Admin.Product.ProductListViewModel

@if (Model.TotalCount == 0)
{
    <p>No products found.</p>
}
else
{
    <div>
        @if (Model.PageNumber > 1)
        {
            <a asp-action="Index" 
               asp-route-pageNumber="@(Model.PageNumber - 1)" 
               asp-route-pageSize="@Model.PageSize"
               asp-route-search="@Model.Search"
               asp-route-category="@Model.Category">Previous</a>
        }
        
        <span>Page @Model.PageNumber of @Model.TotalPages (@Model.TotalCount total products)</span>
        
        @if (Model.PageNumber < Model.TotalPages)
        {
            <a asp-action="Index" 
               asp-route-pageNumber="@(Model.PageNumber + 1)" 
               asp-route-pageSize="@Model.PageSize"
               asp-route-search="@Model.Search"
               asp-route-category="@Model.Category">Next</a>
        }
    </div>
}
