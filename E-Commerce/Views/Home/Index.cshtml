@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center my-5">
    <h1 class="display-4 fw-bold mb-3">Welcome to E-Commerce</h1>
    <p class="lead mb-4">Discover amazing products at unbeatable prices.</p>
    
    <div class="d-flex justify-content-center gap-3">
        <a asp-area="Customer" asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg px-5">
            Start Shopping
        </a>
        
        @if (!User.Identity!.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary btn-lg px-5">
                Login / Register
            </a>
        }
    </div>

    <div class="mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="p-4">
                    <i class="bi bi-truck fs-1 text-primary mb-2"></i>
                    <h3>Fast Delivery</h3>
                    <p class="text-muted">Get your products delivered in record time.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4">
                    <i class="bi bi-shield-check fs-1 text-primary mb-2"></i>
                    <h3>Secure Payment</h3>
                    <p class="text-muted">Your transactions are safe with us.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4">
                    <i class="bi bi-headset fs-1 text-primary mb-2"></i>
                    <h3>24/7 Support</h3>
                    <p class="text-muted">We are here to help you anytime.</p>
                </div>
            </div>
        </div>
    </div>
</div>