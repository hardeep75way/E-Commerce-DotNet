@model E_Commerce.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div style="max-width: 800px; margin: 50px auto; text-align: center;">
    <h1 style="color: #cc0000; font-size: 48px;">Oops! Something went wrong</h1>
    <hr style="border: 1px solid #ddd; margin: 20px 0;" />
    
    <div style="padding: 30px; background-color: #fff3cd; border: 1px solid #ffc107; border-radius: 5px; margin: 20px 0;">
        <h2 style="color: #856404;">We're sorry for the inconvenience</h2>
        <p style="font-size: 16px; color: #856404; margin: 15px 0;">
            An unexpected error has occurred while processing your request. 
            Our team has been notified and we're working to fix the issue.
        </p>
        
        @if (!string.IsNullOrEmpty(Model.RequestId))
        {
            <p style="font-size: 14px; color: #666; margin-top: 20px;">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
            <p style="font-size: 12px; color: #999;">
                Please provide this ID if you contact support.
            </p>
        }
    </div>
    
    <div style="margin-top: 30px;">
        <a asp-controller="Home" asp-action="Index" style="padding: 12px 30px; background-color: #007bff; color: white; text-decoration: none; border-radius: 4px; font-size: 16px; display: inline-block;">
            Return to Home
        </a>
        <a asp-area="Customer" asp-controller="Products" asp-action="Index" style="padding: 12px 30px; background-color: #28a745; color: white; text-decoration: none; border-radius: 4px; font-size: 16px; margin-left: 10px; display: inline-block;">
            Browse Products
        </a>
    </div>
    
    <div style="margin-top: 40px; color: #999; font-size: 14px;">
        <p>Common issues that might help:</p>
        <ul style="list-style: none; padding: 0;">
            <li>• Try refreshing the page</li>
            <li>• Clear your browser cache</li>
            <li>• Check your internet connection</li>
        </ul>
    </div>
</div>
