@model E_Commerce.Models.Admin.Product.EditProductViewModel



<div style="max-width: 600px; margin: 20px auto;">
    <h2>Edit Product</h2>
    <hr />

    <form asp-action="Edit" method="post" style="margin-top: 20px;">
        <input type="hidden" asp-for="Id" />

        <table style="width: 100%; border-spacing: 10px;">
            <tr>
                <td style="width: 150px;"><label asp-for="Name"></label></td>
                <td>
                    <input asp-for="Name" style="width: 100%; padding: 5px;" />
                    <span asp-validation-for="Name" style="color: red; font-size: 12px;"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="Category"></label></td>
                <td>
                    <input asp-for="Category" style="width: 100%; padding: 5px;" />
                    <span asp-validation-for="Category" style="color: red; font-size: 12px;"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="Price"></label></td>
                <td>
                    <input asp-for="Price" type="number" step="0.01" style="width: 100%; padding: 5px;" />
                    <span asp-validation-for="Price" style="color: red; font-size: 12px;"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="StockQuantity"></label></td>
                <td>
                    <input asp-for="StockQuantity" type="number" style="width: 100%; padding: 5px;" />
                    <span asp-validation-for="StockQuantity" style="color: red; font-size: 12px;"></span>
                </td>
            </tr>
            <tr>
                <td></td>
                <td style="padding-top: 10px;">
                    <button type="submit" style="padding: 8px 20px; margin-right: 10px;">Update Product</button>
                    <a asp-action="Index" style="padding: 8px 20px; text-decoration: none;">Back to List</a>
                </td>
            </tr>
        </table>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
