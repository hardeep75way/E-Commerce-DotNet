@model E_Commerce.Models.Admin.Product.ProductListViewModel

@{
    ViewData["Title"] = "Manage Products";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h2 class="mb-0">Manage Products</h2>
        <div>
            <a asp-action="Create" class="btn btn-primary me-2">
                <i class="bi bi-plus-lg"></i> Add New Product
            </a>
            <a asp-action="UploadExcel" class="btn btn-success">
                <i class="bi bi-file-earmark-excel"></i> Upload Excel
            </a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-filter"></i> Search & Filter
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-5">
                    <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Search by name..." />
                </div>
                <div class="col-md-4">
                    <input type="text" name="category" value="@Model.Category" class="form-control" placeholder="Filter by category..." />
                </div>
                <input type="hidden" name="pageNumber" value="1" />
                <input type="hidden" name="pageSize" value="@Model.PageSize" />
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(Model.Search) || !string.IsNullOrEmpty(Model.Category))
            {
                <div class="mt-2 text-end">
                    <a asp-action="Index" class="text-decoration-none small text-muted">Clear Filters</a>
                </div>
            }
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-0">
            <partial name="_ProductsTable" model="Model.Items" />
        </div>
        <div class="card-footer bg-white">
            <partial name="_Pagination" model="Model" />
        </div>
    </div>
</div>
