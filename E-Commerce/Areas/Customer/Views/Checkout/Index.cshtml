@model E_Commerce.Models.Customer.Checkout.CheckoutViewModel

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="mb-4">Review Your Order</h2>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }

            <div class="card mb-4">
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Product</th>
                                <th class="text-end">Price</th>
                                <th class="text-center">Quantity</th>
                                <th class="text-end pe-4">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="ps-4">@item.ProductName</td>
                                    <td class="text-end">$@item.Price.ToString("F2")</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end pe-4">$@item.Subtotal.ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="3" class="text-end fw-bold pt-3 pb-3">Total Amount:</td>
                                <td class="text-end fw-bold pt-3 pb-3 pe-4 text-primary fs-5">$@Model.TotalAmount.ToString("F2")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="text-decoration-none">
                    &larr; Back to Cart
                </a>
                
                <form asp-action="PlaceOrder" method="post">
                    <button type="submit" class="btn btn-success btn-lg px-5">
                        Place Order
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
