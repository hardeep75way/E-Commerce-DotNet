@model E_Commerce.Models.Customer.Cart.CartViewModel

<div style="max-width: 900px; margin: 20px auto;">
    <h2>Shopping Cart</h2>
    <hr />

    @if (TempData["Error"] != null)
    {
        <div style="padding: 10px; background-color: #ffcccc; border: 1px solid #cc0000; margin-bottom: 15px;">
            @TempData["Error"]
        </div>
    }

    @if (!Model.Items.Any())
    {
        <p>Your cart is empty.</p>
        <a asp-area="Customer" asp-controller="Products" asp-action="Index" style="padding: 8px 20px; text-decoration: none;">Continue Shopping</a>
    }
    else
    {
        <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
            <thead>
                <tr style="background-color: #e0e0e0;">
                    <th style="padding: 10px; text-align: left; border: 1px solid #ccc;">Product</th>
                    <th style="padding: 10px; text-align: right; border: 1px solid #ccc;">Price</th>
                    <th style="padding: 10px; text-align: center; border: 1px solid #ccc;">Quantity</th>
                    <th style="padding: 10px; text-align: right; border: 1px solid #ccc;">Subtotal</th>
                    <th style="padding: 10px; text-align: center; border: 1px solid #ccc;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td style="padding: 10px; border: 1px solid #ccc;">@item.ProductName</td>
                        <td style="padding: 10px; text-align: right; border: 1px solid #ccc;">$@item.Price.ToString("F2")</td>
                        <td style="padding: 10px; text-align: center; border: 1px solid #ccc;">
                            <form asp-action="UpdateQuantity" method="post" style="display: inline;">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <input type="number" name="quantity" value="@item.Quantity" min="1" style="width: 60px; padding: 3px;" />
                                <button type="submit" style="padding: 3px 10px; margin-left: 5px;">Update</button>
                            </form>
                        </td>
                        <td style="padding: 10px; text-align: right; border: 1px solid #ccc;">$@item.Subtotal.ToString("F2")</td>
                        <td style="padding: 10px; text-align: center; border: 1px solid #ccc;">
                            <form asp-action="Remove" method="post" style="display: inline;">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <button type="submit" style="padding: 5px 10px; background-color: #cc0000; color: white;">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr style="background-color: #f5f5f5; font-weight: bold;">
                    <td colspan="3" style="padding: 10px; text-align: right; border: 1px solid #ccc;">Total:</td>
                    <td style="padding: 10px; text-align: right; border: 1px solid #ccc;">$@Model.TotalAmount.ToString("F2")</td>
                    <td style="padding: 10px; border: 1px solid #ccc;"></td>
                </tr>
            </tfoot>
        </table>

        <div style="margin-top: 20px;">
            <p>Total Items: @Model.ItemCount</p>
            <a asp-area="Customer" asp-controller="Products" asp-action="Index" style="padding: 8px 20px; text-decoration: none; margin-right: 10px;">Continue Shopping</a>
            <a asp-area="Customer" asp-controller="Checkout" asp-action="Index" style="padding: 8px 20px; text-decoration: none; background-color: #28a745; color: white; margin-right: 10px;">Proceed to Checkout</a>
            <form asp-action="Clear" method="post" style="display: inline;">
                <button type="submit" style="padding: 8px 20px; background-color: #cc0000; color: white;">Clear Cart</button>
            </form>
        </div>
    }
</div>
