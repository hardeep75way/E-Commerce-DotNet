@model E_Commerce.Models.Customer.Product.CustomerProductListViewModel

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Products</h2>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label">Search by Name</label>
                    <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Search products..." />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Filter by Category</label>
                    <input type="text" name="category" value="@Model.Category" class="form-control" placeholder="Category..." />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                    <a asp-action="Index" class="btn btn-outline-secondary w-100 ms-2">Clear</a>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Products.Any())
    {
        <div class="alert alert-info">No products found matching your criteria.</div>
    }
    else
    {
        <p class="text-muted mb-2">Showing @Model.Products.Count() of @Model.TotalCount products</p>
        
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th class="text-end">Price</th>
                            <th class="text-center">Stock</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td><span class="badge bg-light text-dark border">@product.Category</span></td>
                                <td class="text-end text-price">$@product.Price.ToString("F2")</td>
                                <td class="text-center">
                                    @if (product.InStock)
                                    {
                                        <span class="badge bg-success">In Stock (@product.StockQuantity)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Out of Stock</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (product.InStock)
                                    {
                                        <form asp-area="Customer" asp-controller="Cart" asp-action="AddToCart" method="post" class="d-flex justify-content-center align-items-center gap-2">
                                            <input type="hidden" name="productId" value="@product.Id" />
                                            <input type="number" name="quantity" value="1" min="1" max="@product.StockQuantity" class="form-control form-control-sm" style="width: 70px;" />
                                            <button type="submit" class="btn btn-sm btn-primary">Add</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-secondary" disabled>Unavailable</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="mt-4">
            <partial name="_CustomerPagination" model="Model" />
        </div>
    }
</div>
